{% if noHeader %}
    <!-- Si noHeader est vrai, on ne montre pas l'en-tête -->
    <header></header>
{% elseif utilisateur is defined %}
    {% if utilisateur.isEntreprise %}
        <!-- Header classique pour les entreprises -->
        <header class="header-entreprise">
            <div class="logoContainer">
                <div>
                    <a href="/"><img class="logo" src="/assets/images/Logo-MyEvents.png" alt="logo du site MyEvents MyE"></a>
                </div>
                <div>
                    <a href="/profilPros">Mon Profil</a>
                </div>
                <div>
                    <a href="/planning">Planning</a>
                </div>
                <div>
                    <a href="/prestation">Prestations</a>
                </div>
            </div>
            <div class='flexContainer'>
                <div>
                    <a href="/logout"><img class='logout' src="/assets/images/logout.png" title="Se Déconnecter" alt="icone de déconnexion"></a>
                </div>
            </div>
        </header>

        <!-- Header Burger pour les entreprises -->
        <header class="header-entreprise-burger">
            <div class="container">
                <nav class="navbar navbar-expand-lg navbar-light">
                    <a class="navbar-brand" href="/"><img class="logo" src="/assets/images/Logo-MyEvents.png" alt="logo du site MyEvents MyE"></a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavEntreprise" aria-controls="navbarNavEntreprise" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNavEntreprise">
                        <ul class="navbar-nav">
                            <li class="nav-item"><a class="nav-link" href="/profilPros">Mon Profil</a></li>
