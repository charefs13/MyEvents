            <div class='flexContainer'>
                <div>
                    <a href="/logout"><img class='logout' src="/assets/images/logout.png" title="Se Déconnecter" alt="icone de déconnexion"></a>
                </div>
            </div>
        </header>

        <!-- Header Burger pour les particuliers -->
        <header class="header-particulier-burger">
            <div class="container">
                <nav class="navbar navbar-expand-lg navbar-light">
                    <a class="navbar-brand" href="/"><img class="logo" src="/assets/images/Logo-MyEvents.png" alt="logo du site MyEvents MyE"></a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavParticulier" aria-controls="navbarNavParticulier" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
