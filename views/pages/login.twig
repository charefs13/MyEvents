{# sign In  #}

{% extends "../layouts/base.twig" %}
{% block style %}
	<link rel="stylesheet" href="assets/css/style.css">
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Convergence&family=Red+Hat+Display:ital,wght@0,300..900;1,300..900&family=Roboto:wght@100;400&display=swap" rel="stylesheet">

{% endblock %}

{% block tile %}MyEvents - Connexion
{% endblock %}

{% block main %}

	<div>
		{% if errorMessage %}
			<p class='error'>{{ errorMessage }}</p>
		{% endif %}

		{% if successMessage %}
			<p class='message'>{{ successMessage }}</p>
		{% endif %}

	</div>

	<h1><img src="assets/images/Titre-MyEvents.png" alt="titre principal MyEvents"></h1>

	<section class='mainSection'>
		<h2>Connectez vous à votre compte personnel</h2>

		<div class='formSignIn'>
			<form action="/login" method='POST'>

				<p style='text-align: center; margin-bottom:5px;'>Pas encore de compte ?
				</p>
				<p style='text-align: center'>
					<a class='link bold' href="/signIn">
						Inscrivez vous</a>
				</p>

				<div class="form-group">
					<input id='email' type="email" name="email" placeholder='Email'>
				</div>

				<div class="form-group">
					<input id='password' type="password" name="password" placeholder='Mot de passe'>

					<a href="/mdpOublie">Cliquer pour réinitialiser le mot de passe</a>
				</div>
				{% if error.email %}

					<p class='error'>{{ error.email }}</p>
				{% endif %}

				{% if error.password %}
					<p class='error'>{{ error.password }}</p>
				{% endif %}

				<div class='form-group'>
					<button type="submit">Connexion</button>
				</div>
			</form>

			{% if message %}
				<p>{{message}}</p>
			{% endif %}
		</div>


	</section>

{% endblock %}
