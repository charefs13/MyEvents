{% extends "../layouts/base.twig" %}
{% block style %}
	<link rel="stylesheet" href="/assets/css/style.css">
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Convergence&family=Red+Hat+Display:ital,wght@0,300..900;1,300..900&family=Roboto:wght@100;400&display=swap" rel="stylesheet">

{% endblock %}
{% block tile %}MyEvents - Inscription
{% endblock %}

{% block main %}
	<div>
		{% if errorMessage %}
			<p class='error'>{{ errorMessage }}</p>
		{% endif %}

		{% if successMessage %}
			<p class='message'>{{ successMessage }}</p>
		{% endif %}

	</div>

	<h1><img src="/assets/images/Titre-MyEvents.png" alt="titre principal MyEvents"></h1>

	<section class='mainSection'>
		<h2>Inscrivez vous et connectez vous pour trouver de nouveaux clients</h2>


		<div class='formSignIn'>
			<form action="/signInPros" method='POST'>
				<div class="form-group">
					<input id='nom' type="text" name="nom" placeholder='Nom'>
				</div>

				<div class="form-group">
					<input id='prenom' type="text" name="prenom" placeholder='PrÃ©nom'>
				</div>

				<div class="form-group">
					<input id='email' type="email" name="email" placeholder='Email'>
				</div>

				<div class="form-group">
					<input id='password' type="password" name="password" placeholder="Mot de passe">
					{% if error %}
						<p class='error'>{{ error.password }}</p>
					{% endif %}
				</div>

				<div class="form-group">
					<input id='confirmPassword' type="password" name="confirmPassword" placeholder='Confirmez votre mot de passe'>
				</div>

				{% if error %}
					<p class='error'>{{ error.confirmMdp }}</p>
				{% endif %}

				<div class='form-group'>
					<button type="submit">Inscription</button>
				</div>
			</form>
		</div>


	</section>

{% endblock %}
