model Evenement {
  id            Int         @id @default(autoincrement())
  type          String
  titre         String
  description   String?
  dateDebut     DateTime
  dateFin       DateTime
  lieu          String?
  utilisateur   Utilisateur @relation(fields: [utilisateurId], references: [id])
  utilisateurId Int
  invites       Invite[]
  //   taches        Tache[]
}
